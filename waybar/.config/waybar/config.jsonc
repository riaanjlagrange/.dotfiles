{
  "layer": "top",
  "position": "top",
  "margin-bottom": -10,
  "spacing" : 0,
  "modules-left": [
  "hyprland/workspaces",
  ],

  // "modules-center": ["clock"],

  "modules-right": [
    "custom/nosleep",
    "custom/wiki",
    "custom/power",
    "memory",
    "bluetooth",
    "network",
    "pulseaudio", 
    "backlight",
    "battery",
    "clock",
    "custom/lock",
    "custom/restart",
    "custom/shutdown",
  ],

  "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "format-icons": {
      "active": "",
      "default": ""
    }
  },

  "bluetooth": {
    "format": "󰂲",
    "format-on": "{icon}",
    "format-off": "{icon}", 
    "format-connected":"{icon}",
    "format-icons":{
        "on":"󰂯",
        "off": "󰂲",
        "connected": "󰂱",
        },
    "on-click": "blueman-manager",
    "tooltip-format-connected":"{device_enumerate}"
  },

  "custom/music": {
    "format": "{}",
    "escape": true,
    "interval": 5,
    "tooltip": false,
    "exec": "playerctl metadata --format='{{ artist }} - {{ title }}'",
    "on-click": "playerctl play-pause",
    "max-length": 50
  },

"custom/wiki": {
  "format": "\uf02d",
  "tooltip-format": "Open Arch Wiki",
  "on-click": "xdg-open https://wiki.archlinux.org/",
  "interval": 0
},

  "clock": {
    "timezone": "Africa/Johannesburg",
    "tooltip-format": "Open Google Calendar",
    "format": "{:%H:%M:%S  -  %A, %d %B}",
    "interval": 1,
    "on-click": "xdg-open https://calendar.google.com"
  },

  "network": {
    "format-wifi": "󰤢",
    "format-ethernet": "󰈀 ",
    "format-disconnected": "󰤠 ",
    "interval": 5,
    "tooltip-format": "{essid} ({signalStrength}%)",
    "on-click": "kitty -e nmtui"

 },

  "cpu": {
    "interval": 1,
    "format": "  {icon0}{icon1}{icon2}{icon3} {usage:>2}%",
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
    "on-click": "kitty -e btop"
  },

  "custom/power": {
    "exec": "~/.config/waybar/scripts/power_mode.sh",
    "on-click": "~/.config/waybar/scripts/power_mode.sh toggle",
    "interval": 5,
    "return-type": "json",
    "tooltip": true 
  },

  "memory": {
    "interval": 30,
    "format": "    {used:0.1f}G/{total:0.1f}G",
    "tooltip-format": "Memory",
    "on-click": "kitty -e htop"
  },

  "custom/uptime": {
    "format": "{}",
    "format-icon": [""], 
    "tooltip": false,
    "interval": 1600,
    "exec": "$HOME/.config/waybar/scripts/uptime.sh"
  },
  
  "backlight": {
        "format": "{icon}    {percent}%",
        "format-icons": ["","󰃜", "󰃛", "󰃞","󰃝","󰃟","󰃠"],
        "tooltip": false
  },
  
    "pulseaudio": {
	"format": "{icon}    {volume}%",
	"format-muted": "",  // muted icon
	"format-icons": {
	    "default": ["", ""]  // low, medium, high volume
	},
	"on-click": "pavucontrol"
    },

  "battery": {
        "interval":2,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}    {capacity}%",
        "format-full": "{icon}    {capacity}%",
    "format": "{:%H:%M:%S  -  %A, %d %M}",
        "format-charging": "   {capacity}%",
        "format-plugged": "   {capacity}%",
        "format-alt": "{icon}   {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
  },
  
  "custom/lock": {
  "tooltip": false,
  "on-click": "hyprctl dispatch exit",
  "format" : ""
  },
  "custom/shutdown": {
	"tooltip": false,
	"on-click": "systemctl poweroff",
	"format": ""
  },
  "custom/restart": {
	"tooltip": false,
	"on-click": "systemctl reboot",
	"format": ""
  },

    "custom/nosleep": {
    "format": "{}",
    "interval": 2,
    "tooltip-format": "Toggle Sleep Mode",
    "exec": "if [ -f /tmp/nosleep.lock ]; then echo '●'; else echo '○'; fi",
    "on-click": "~/scripts/toggle-nosleep.sh"
},

  "custom/pomodoro": {
	"format": "{}",
	"return-type": "json",
	"exec": "waybar-module-pomodoro --no-work-icons",
	"on-click": "waybar-module-pomodoro toggle",
	"on-click-right": "waybar-module-pomodoro reset",
  },

}

